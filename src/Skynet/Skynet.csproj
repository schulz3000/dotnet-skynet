<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>8.0</LangVersion>
    <Version>0.0.1-alpha</Version>
    <Authors>Xaver Schulz</Authors>
    <Company />
    <Title>dotnet-skynet</Title>
    <Description>SDK for integrating Skynet into dotnet applications</Description>
    <Copyright>schulz3000</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/schulz3000/dotnet-skynet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/schulz3000/dotnet-skynet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>sia skynet dotnet</PackageTags>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>dotnet-skynet</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.0" PrivateAssets="all" />
  </ItemGroup>

</Project>
